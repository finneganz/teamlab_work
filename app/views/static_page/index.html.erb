<% provide(:title, "Top") %>

    <% if user_signed_in? %>
        <h3><% link_to '掲示板を新規作成する' , '#' %></h3>

        <h3>掲示板一覧</h3>
        <%#= @topics.each do |t| %>
            <p><%#= t.title %></p>
            <li><%#= t.post.content %></li>
        <%# end %>

    <% else %>
        <h2>Keijiban.appとは</h2>
        <p>電子掲示板である。</p>

        <div class="center">
            <%= link_to "ユーザー登録", signup_path, class:"btn btn-sm btn-primary" %>
            <%= link_to "ログイン", login_path, class:"btn btn-sm btn-primary" %>
        </div>
    <% end %>